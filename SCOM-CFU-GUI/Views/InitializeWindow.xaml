<Window x:Class="SCOM_CFU_GUI.Views.InitializeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCOM_CFU_GUI.Views"
		xmlns:vm="clr-namespace:SCOM_CFU_GUI.ViewModels"
        mc:Ignorable="d"
        Title="InitializeWindow" Height="150" Width="300" ResizeMode="NoResize">
	<Grid>
		<StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock Text="SCOM MS Hostname:"/>
			<StackPanel Orientation="Horizontal" Margin="0,5,0,20">
				<TextBox x:Name="hostnameTextBox" Text="{Binding ScomHostname}" MinWidth="190" Margin="0,0,10,0"/>
				<Button Content="Connect" Width="50" x:Name="connectButton"/>
			</StackPanel>
			<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
				<ProgressBar x:Name="initProgressBar" Height="20" Width="250" IsIndeterminate="True" Visibility="Hidden"/>
				<TextBlock x:Name="initStatusText" Text="{Binding InitStatus}"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
